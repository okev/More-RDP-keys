{
  "homepage": "https://github.com/okev/More-RDP-keys",
  "import_url": "karabiner://karabiner/assets/complex_modifications/import?url=https://raw.githubusercontent.com/okev/More-RDP-keys/master/more-rdp-keys.json",
  "maintainers": [
    "okev"
  ],
  "rules": [
    {
      "description": "Mac OSX RDP: Command-P to Control-P",
      "manipulators": [
          {
              "conditions": [
                  {
                      "bundle_identifiers": [
                          "^com\\.microsoft\\.rdc$",
                          "^com\\.microsoft\\.rdc\\.mac$",
                          "^com\\.microsoft\\.rdc\\.macos$",
                          "^com\\.microsoft\\.rdc\\.osx\\.beta$",
                          "^com\\.thinomenon\\.RemoteDesktopConnection$",
                          "^com\\.teamviewer\\.TeamViewer$",
                          "^com\\.vmware\\.horizon$"
                      ],
                      "type": "frontmost_application_if"
                  }
              ],
              "from": {
                  "key_code": "p",
                  "modifiers": {
                      "mandatory": [
                          "command",
                          "shift"
                      ]
                  }
              },
              "to": [
                  {
                      "key_code": "p",
                      "modifiers": [
                          "left_control",
                          "left_shift"
                      ]
                  }
              ],
              "type": "basic"
          }
      ]
    },
    {
      "description": "Mac OSX RDP: Chrome developer console (command-option-i to ctrl-shift-i)",
      "manipulators": [
          {
              "conditions": [
                  {
                      "bundle_identifiers": [
                          "^com\\.microsoft\\.rdc$",
                          "^com\\.microsoft\\.rdc\\.mac$",
                          "^com\\.microsoft\\.rdc\\.macos$",
                          "^com\\.microsoft\\.rdc\\.osx\\.beta$",
                          "^com\\.thinomenon\\.RemoteDesktopConnection$",
                          "^com\\.teamviewer\\.TeamViewer$",
                          "^com\\.vmware\\.horizon$"
                      ],
                      "type": "frontmost_application_if"
                  }
              ],
              "from": {
                  "key_code": "i",
                  "modifiers": {
                      "mandatory": [
                          "command",
                          "option"
                      ]
                  }
              },
              "to": [
                  {
                      "key_code": "i",
                      "modifiers": [
                          "left_control",
                          "left_shift"
                      ]
                  }
              ],
              "type": "basic"
          }
      ]
    }
  ],
  "title": "More RDP keys"
}
